<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.UTS_AKB" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/my_black</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/my_secondary_black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="myBody">
        <item name="android:background">@color/my_black</item>
    </style>

    <style name="myTextPrimary">
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="myTextSecondary">
        <item name="android:textColor">@color/secondaryTextColor</item>
    </style>


    <style name="myCard">
        <item name="android:background">@color/my_secondary_black</item>
        <item name="android:padding">16dp</item>
    </style>
</resources>